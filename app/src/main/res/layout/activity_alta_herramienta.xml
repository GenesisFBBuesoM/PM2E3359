<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- CABECERA AZUL -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#2563EB" />

    <LinearLayout
        android:id="@+id/headerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de"
                android:textSize="18sp"
                android:textColor="#93C5FD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta de Herramienta"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- BOTÓN VER LISTA EN LA CABECERA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerListaHeader"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VER LISTA"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_sort_by_size"
            app:iconTint="#FFFFFF"
            app:iconSize="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContent"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <!-- DATOS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATOS GENERALES"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:letterSpacing="0.1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de Herramienta"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_rounded"
                    android:paddingHorizontal="16dp"
                    android:hint="Ej. Taladro Percutor"
                    android:textColor="#111827"
                    android:inputType="text"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción Corta"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />
                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_input_rounded"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:hint="Breve descripción de uso..."
                    android:textColor="#111827"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especificaciones Técnicas"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />
                <EditText
                    android:id="@+id/etEspecificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_input_rounded"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:hint="Voltaje, potencia, marca..."
                    android:textColor="#111827"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"
                    android:layout_marginVertical="24dp" />

                <!-- FOTO SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO FOTOGRÁFICO"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:letterSpacing="0.1" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F3F4F6">
                    
                    <ImageView
                        android:id="@+id/imgFoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_camera"
                        android:alpha="0.3" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCamara"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Cámara"
                        android:backgroundTint="#EFF6FF"
                        android:textColor="#2563EB"
                        app:iconTint="#2563EB"
                        app:icon="@android:drawable/ic_menu_camera" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGaleria"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Galería"
                        android:backgroundTint="#EFF6FF"
                        android:textColor="#2563EB"
                        app:iconTint="#2563EB"
                        android:layout_marginStart="12dp"
                        app:icon="@android:drawable/ic_menu_gallery" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"
                    android:layout_marginVertical="24dp" />

                <!-- BUTTONS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="REGISTRAR HERRAMIENTA"
                    android:textStyle="bold"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="16dp"
                    app:elevation="6dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</RelativeLayout>
