<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <!-- HEADER BLUE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3B82F6"
        android:paddingTop="48dp"
        android:paddingBottom="40dp"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtToolTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asignar Herramienta"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa los campos"
            android:textSize="14sp"
            android:textColor="#E0E7FF" />
    </LinearLayout>

    <!-- FORM CARD -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Herramienta seleccionada"
                android:textColor="@color/text_muted"
                android:textSize="14sp" />
                
            <TextView
                android:id="@+id/txtToolNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taladro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ©cnico"
                android:textColor="@color/text_muted"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerTecnicos"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_input_rounded"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha inicio"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnFechaInicio"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:text="19/01/2025"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#FFFFFF"
                        android:background="@drawable/bg_input_rounded"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:textColor="@color/text_primary"
                        android:textAllCaps="false" />
                </LinearLayout>

                <View android:layout_width="16dp" android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha fin"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnFechaFin"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:text="26/01/2025"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#FFFFFF"
                        android:background="@drawable/bg_input_rounded"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:textColor="@color/text_primary"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:backgroundTint="#F3F4F6"
                    android:textColor="#4B5563"
                    android:background="@drawable/bg_button_cancel"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnAsignar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1.2"
                    android:text="Confirmar"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_confirm"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
